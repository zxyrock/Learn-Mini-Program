<!--pages/home/home.wxml-->
<view>事件的传递参数</view>
<!--用data-index="{{index}}"来获取index
    用data-item="{{item}}"来获取item
    在js中通过event来获取传递的数据  -->
<view class="container">
  <block wx:for="{{titles}}" wx:key="{{index}}">
    <view class="item" 
          bindtap="handleViewClick"
          data-index="{{index}}"
          data-item="{{item}}">
          {{item}}
    </view>
  </block>
</view>